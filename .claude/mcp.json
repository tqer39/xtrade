{
  "mcpServers": {
    "terraform": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-terraform"
      ],
      "env": {
        "TERRAFORM_PATH": "terraform"
      }
    },
    "gcp": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-gcp"
      ],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "${GOOGLE_APPLICATION_CREDENTIALS}"
      }
    }
  }
}
